<div class="col-md-6" style=" float: none; margin: 0 auto;">
  <% if @systems.count > 0 %>
		<div class="list-group">
			<h3>Существующие системы:</h3>
			<%@systems.each do |s|%>
			  <a href="/systems/<%= s.id %>" class="list-group-item" style="margin-top: 1em;" >
			    <h4 class="list-group-item-heading"><%= s.name%></h4>
			    <p class="list-group-item-text"><%= s.description%></p>
			  </a>
			<% end %>
		</div>
	<% end %>
</div>